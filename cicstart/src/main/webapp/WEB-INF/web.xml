<?xml version="1.0" encoding="UTF-8"?>
<web-app>
	<context-param>
		<param-name>application.properties</param-name>
		<param-value>/cicstart/config/application.properties</param-value>
	</context-param>

	<filter>
		<filter-name>EntityManagerInterceptor</filter-name>
		<filter-class>ca.ualberta.physics.cssdp.dao.EntityManagerInterceptor</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>EntityManagerInterceptor</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>jersey</servlet-name>
		<servlet-class>ca.ualberta.physics.cssdp.configuration.CicstartServletContainer</servlet-class>
		<init-param>
			<param-name>com.sun.jersey.config.property.packages</param-name>
			<param-value>ca.ualberta.physics.cssdp;ca.ualberta.physics.cicstart;com.wordnik.swagger.jaxrs.listing</param-value>
		</init-param>
		<init-param>
			<param-name>com.sun.jersey.spi.container.ContainerRequestFilters</param-name>
			<param-value>com.sun.jersey.api.container.filter.PostReplaceFilter</param-value>
		</init-param>
		<init-param>
			<param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
			<param-value>true</param-value>
		</init-param>
	</servlet>
